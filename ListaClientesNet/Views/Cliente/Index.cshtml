@model IEnumerable<ListaClientesNet.Models.ClienteModel>

@{
    ViewBag.Title = "Listado de Clientes";
}


<h2>Listado de Clientes</h2>

<hr />

<p>
    @Html.ActionLink("Crear nuevo cliente", "Create")
</p>
<table class="table table-hover mid">
    <tr>
        <th>
            DNI
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Email
        </th>
        <th>
            Telefono
        </th>
        <th>
            Pais de Residencia
        </th>
        <th>
            Fecha de Nacimiento
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.dni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pais)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nacimiento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Detalles", "Details", new { id = item.id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Borrar", "Delete", new { id = item.id }, new { @class = "btn btn-danger mx-1" })
            @Html.ActionLink("Email", "SendMail", new { id = item.id, item.email }, new { @class = "btn btn-danger mx-1" })
            @Html.ActionLink("D", "Datos", new { id = item.id, item.email }, new { @class = "btn btn-danger mx-1" })
        </td>
    </tr>

}

</table>
